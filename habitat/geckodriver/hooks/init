  /SD 01/01/2099 `
  /RP setup `
  /IT `
  /TN geckodriver_task `
  /TR "{{pkgPathFor "core/hab"}}\bin\hab.exe pkg exec {{pkg.ident}} pwsh {{pkg.svc_config_path}}\geckodriver_task.ps1" `
  /F
