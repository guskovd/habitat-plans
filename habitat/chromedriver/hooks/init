# -*- mode: powershell -*-

hab pkg install {{ cfg.chrome_pkg }}

$chrome_path=$(hab pkg path {{ cfg.chrome_pkg }})
$chromedriver_path=$(hab pkg path qago/chromedriver)

New-Item -Force -Path "$chrome_path\bin\chromedriver.exe" -ItemType SymbolicLink -Value "$chromedriver_path\bin\chromedriver.exe"

C:/Windows/system32/schtasks.exe `
  /Create /RU Administrator `
  /SC ONCE `
  /ST 00:00 `
  /SD 01/01/2099 `
  /RP setup `
  /IT `
  /TN chromedriver_task `
  /TR "{{pkgPathFor "core/hab"}}\bin\hab.exe pkg exec {{pkg.ident}} pwsh {{pkg.svc_config_path}}\chromedriver_task.ps1" `
  /F
